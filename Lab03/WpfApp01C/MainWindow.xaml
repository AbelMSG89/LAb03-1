<Window x:Class="WpfApp01C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Estudiantes" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" 
                   Text="Listado de los Estudiantes (¿Por qué tienen precio xD?)" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Panel de búsqueda -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Buscar por nombre:" 
                       VerticalAlignment="Center" 
                       Margin="0,0,10,0"/>
            <TextBox x:Name="txtSearch" 
                     Width="200" 
                     Height="25" 
                     VerticalAlignment="Center"
                     TextChanged="TxtSearch_TextChanged"/>
            <Button x:Name="btnSearch" 
                    Content="Buscar" 
                    Width="80" 
                    Height="25" 
                    Margin="10,0,0,0"
                    Click="BtnSearch_Click"/>
            <Button x:Name="btnClear" 
                    Content="Limpiar" 
                    Width="80" 
                    Height="25" 
                    Margin="10,0,0,0"
                    Click="BtnClear_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" 
                  x:Name="dgStudents"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  AlternatingRowBackground="LightGray"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" 
                                    Binding="{Binding ProductId}" 
                                    Width="80"/>
                <DataGridTextColumn Header="Nombre" 
                                    Binding="{Binding Name}" 
                                    Width="300"/>
                <DataGridTextColumn Header="Precio" 
                                    Binding="{Binding Price, StringFormat=C}" 
                                    Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>